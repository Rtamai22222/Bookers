<h1>Books</h1>
  <% @books.each do |booklist| %>
    <p>・タイトル</p>
    <span><%= booklist.title %></span>
    
    <p>・内容</p>
    <span><%= booklist.body %></span>
    
    <span><%= link_to 'SHOW', "/books/#{booklist.id}" %></span>
    <span><%= link_to 'EDIT', "/books/#{booklist.id}/edit" %></span>
  <% end %>
  
  
<h1>new</h1>
  <%= form_with model: @book, url: "/books", method: :post do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>
    <h4>body</h4>
    <%= f.text_area :body %>
    <%= f.submit '投稿' %>
  <% end %>